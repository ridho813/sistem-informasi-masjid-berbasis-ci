<IfModule mod_rewrite.c>
	IfModule mod_rewrite.c>
	RewriteEngine On
	
	# Require HTTPS
	RewriteCond %{HTTPS} !=on
	RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R,L]
	
	# Removing the index.php file -
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
